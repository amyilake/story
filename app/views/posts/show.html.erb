<% if current_user == @post.author %>
  <%= link_to("修改" , edit_post_path(@post.id))%>
  <%= link_to("刪除" , post_path(@post.id) , method: :delete , :confirm => "確定刪除嗎?")%>
<% end %>
<%= link_to("返回" , posts_path , :class => "btn btn-info")%>
<hr>

<div class="row">
  <div class="span12">
    <form class="show-event-well">
      <fieldset>
        <h4><div class="show-event-title"><%= @post.title %></div></h4>
            <%= render 'eventPhoto' , :post => @post , :photo_class_name => "show-event-photo" %>
        <hr>
        <label><%= raw(@post.content) %></label>
      </fieldset>
    </form>
    <%= render 'eventAttached' , :post => @post %>
    <%= render_cell :comment, :show, :post => @post , :current_user => current_user %>
    
  </div>
</div>

