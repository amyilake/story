<% @posts.each do |post| %>
  <div class="event-box">
    <div class="event-attached">
      留言數<%= post.comment_count %> |
      <%= link_to post_likes_path(post) , :method=> :post  do %>
        <%= image_tag "thumbs_up.png" , :class =>"thumb_up" %> 
      <% end %><%= post.like_count %>
    </div>
    <%= link_to post_path(post) do %>
      <%= image_tag "baby.jpg" , :class => "event-photo" %>
    <% end %>
    <div class="event-text">
      <%= link_to(post.title , post_path(post.id)) %> | 
      <%= post.author.name %> 
      <br/>
    </div>
  </div>
<% end%>
