<%= simple_form_for(@post) do |f| %>
  <div>
    <%= f.input :title , required: true %>
    <%= f.input :content , required: true  ,  :input_html => { :rows => 8 , :id => 'editor' }   %>
    <%= f.input :image %>
    <%= f.input :remote_image_url %>
    <%= f.input :public , :as => :boolean %>
    <%= f.button :submit , :class => "btn btn-success" %>
  </div>
<% end %>

