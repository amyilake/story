<%= simple_form_for(@post) do |f| %>
  <div>
    <%= f.input :title , required: true %>
    <%= f.input :image , :label =>"故事封面照片" %>
    <%= f.input :remote_image_url , :label =>"或照片連結" %>
    <%= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Pure'} } %>
    <%= f.button :submit , :class => "btn btn-success" %>
  </div>
<% end %>
