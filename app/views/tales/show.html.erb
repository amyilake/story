<% if current_user == @tale.author %>
  <%= link_to("修改" , edit_tale_path(@tale.id))%>
  <%= link_to("刪除" , tale_path(@tale.id) , method: :delete ,data: { confirm: "確定刪除嗎?"} )%>
<% end %>

<%= link_to("返回" , tales_path , :class => "btn btn-info")%>

<div><%= @tale.title %></div>
<div><%= @tale.content %></div>
<%= image_tag(@tale.image_url(:thumb)) if @tale.image? %>

<%= simple_form_for(@tale) do |f| %>
  <div>
    <%= link_to_add_fields "Add Post", f, :posts %>
    <%= f.button :submit, :class => "btn btn-success" %>
  </div>
<% end %>

<% @posts.each do |post| %>
  <div class="row">
    <div class="span12">
      <%= render partial: 'posts/showPost', locals: { :post => post } %>
      <%= render partial: 'posts/postAttached', locals:{ :mustache => json_for(post)} %>
      <%= render_cell :comment, :show, :post => post , :current_user => current_user %>
    </div>
  </div>
<% end %>

